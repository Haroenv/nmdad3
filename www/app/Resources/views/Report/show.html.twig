{% extends 'base.html.twig' %}

{% block body %}
    <h1>Report</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ report.body }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ report.image }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ report.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ report.longitude }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ report.city }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ report.postalcode }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ report.type }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if report.createdAt %}{{ report.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if report.updatedAt %}{{ report.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if report.deletedAt %}{{ report.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('report_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('report_edit', { 'id': report.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
