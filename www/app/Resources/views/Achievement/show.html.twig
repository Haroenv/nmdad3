{% extends 'base.html.twig' %}

{% block body %}
    <h1>Achievement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ achievement.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ achievement.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ achievement.body }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ achievement.image }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if achievement.updatedAt %}{{ achievement.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('achievement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('achievement_edit', { 'id': achievement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
